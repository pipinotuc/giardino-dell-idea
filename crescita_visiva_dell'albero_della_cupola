<script>
  function updateTree() {
    const tree = document.getElementById('tree-growth');
    tree.innerHTML = '';
    for (let i = 0; i < planted; i++) {
      const piece = document.createElement('span');
      piece.textContent = ['🍃','🍂','🍏','🍒','🌿','🌸'][i % 6];
      tree.appendChild(piece);
    }
  }
</script>

// Chiama updateTree() alla fine di updateDiario()
updateDiario();
updateTree();
