<button id="reset-btn" style="background-color:#d32f2f; margin-bottom:40px;">
  ðŸ”„ Ricomincia il Giardino
</button>

<script>
  document.getElementById('reset-btn').addEventListener('click', () => {
    const conferma = confirm(
      "ðŸŒ± Sei sicuro di voler ricominciare da capo il Giardino dell'Idea?\n\nTutti i progressi salvati verranno persi."
    );

    if (!conferma) return;

    // Rimuove tutte le chiavi relative al giardino
    const chiaviDaRimuovere = ['plantedSeeds', 'seedDates'];
    chiaviDaRimuovere.forEach(chiave => localStorage.removeItem(chiave));

    // Ricarica la pagina
    location.reload();
  });
</script>
